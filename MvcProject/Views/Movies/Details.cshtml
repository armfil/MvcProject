@model MvcMovie.Models.Movie

@{
    ViewData["Title"] = "Details";
    Layout = "_WrapperLayout";
}

<nav class="text-sm sm:text-base p-4 md:p-6 lg:p-6 rounded-md">
    <ol class="list-none p-0 inline-flex space-x-2">
        <li class="flex items-center">
            <a asp-action="Index" asp-controller="Home">
                <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 576 512"
                     class="cursor-pointer hover:fill-blue-500 transition-colors duration-300" fill="#4b5563">
                    <path
                        d="M575.8 255.5c0 18-15 32.1-32 32.1h-32l.7 160.2c0 2.7-.2 5.4-.5 8.1V472c0 22.1-17.9 40-40 40H456c-1.1 0-2.2 0-3.3-.1c-1.4 .1-2.8 .1-4.2 .1H416 392c-22.1 0-40-17.9-40-40V448 384c0-17.7-14.3-32-32-32H256c-17.7 0-32 14.3-32 32v64 24c0 22.1-17.9 40-40 40H160 128.1c-1.5 0-3-.1-4.5-.2c-1.2 .1-2.4 .2-3.6 .2H104c-22.1 0-40-17.9-40-40V360c0-.9 0-1.9 .1-2.8V287.6H32c-18 0-32-14-32-32.1c0-9 3-17 10-24L266.4 8c7-7 15-8 22-8s15 2 21 7L564.8 231.5c8 7 12 15 11 24z"/>
                </svg>
            </a>
            <span class="mx-2">/</span>
        </li>
        <li class="flex items-center">
            <a asp-action="Index">
                Список фильмов
            </a>
            <span class="mx-2">/</span>
        </li>
        <li class="flex items-center">
            <span class="text-gray-800">@Model.Title</span>
        </li>
    </ol>
</nav>

<div>
    <div class="px-4 sm:px-0">
        <div>
            <h3 class="text-base font-semibold leading-7 text-gray-900">Фильм "@Model.Title"</h3>
            <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-500">Информация о фильме.</p>
        </div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50">
            <svg class="-ml-0.5 mr-1.5 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path d="M2.695 14.763l-1.262 3.154a.5.5 0 00.65.65l3.155-1.262a4 4 0 001.343-.885L17.5 5.5a2.121 2.121 0 00-3-3L3.58 13.42a4 4 0 00-.885 1.343z"></path>
            </svg>
            Edit
        </a>

    </div>
    <div class="mt-6 border-t border-gray-100">
        <dl class="divide-y divide-gray-100">
            <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                <dt class="text-sm font-medium leading-6 text-gray-900">Название</dt>
                <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">@Model.Title</dd>
            </div>
            <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                <dt class="text-sm font-medium leading-6 text-gray-900">Жанр</dt>
                <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">@Model.Genre</dd>
            </div>
            <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                <dt class="text-sm font-medium leading-6 text-gray-900">Цена</dt>
                <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">@Model.Price</dd>
            </div>
            <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                <dt class="text-sm font-medium leading-6 text-gray-900">Рейтинг</dt>
                <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">@Model.Rating</dd>
            </div>
        </dl>
    </div>
</div>


